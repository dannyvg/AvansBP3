<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLuchtv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="30dp"
        android:layout_marginStart="237dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="241dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardTemp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/LuchtV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="70dp"
            android:text="Luchtvochtigheid"
            android:textColor="@color/white"
            android:textSize="13dp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/welkom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="..."
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/cardTemp"
        tools:layout_editor_absoluteX="124dp" />

    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:src="@android:drawable/btn_star"
        app:layout_constraintBottom_toTopOf="@+id/cardTemp"
        app:layout_constraintEnd_toStartOf="@+id/cardTemp"
        app:layout_constraintStart_toStartOf="@+id/status"
        app:layout_constraintTop_toBottomOf="@+id/welkom" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/status"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="..."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/welkom" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="169dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Update elke: 5sec"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cardGas"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardGas"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="30dp"
        android:layout_marginStart="237dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="241dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardLuchtv">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/Gas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="70dp"
            android:text="Gaswaarde"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTemp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="50dp"
        android:layout_marginStart="237dp"
        android:layout_marginEnd="241dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welkom">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/Temp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="70dp"
            android:text="Temperatuur"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_home"
          android:layout_height="10dp"
        android:layout_width="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>


